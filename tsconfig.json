{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "strict": true,
    "baseUrl": ".",
"paths": {
  "@interfaces/*": ["interfaces/*"],
  "@lib/*": ["lib/*"],
  "@app/*": ["app/*"],
  "@/*": ["src/*"]
},
    "plugins": [
      { "name": "next" }
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
