#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "📝 Commit successfully created!"

# Optional: show the last commit summary
echo "-----------------------------------"
git log -1 --pretty=format:"%h %s (%an)"
echo
echo "-----------------------------------"

# Optional: run dictionary stats check (non-blocking)
if [ -f ./scripts/sync-stats.ps1 ]; then
  echo "📊 Updating dictionary stats..."
  pwsh -ExecutionPolicy Bypass -File ./scripts/sync-stats.ps1 || true
fi

echo "✅ Post-commit hook finished!"
