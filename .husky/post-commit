echo "-----------------------------------"

# Optional: run dictionary stats check (non-blocking)
if [ -f ./scripts/sync-stats.ps1 ]; then
  echo "ğŸ“Š Updating dictionary stats..."
  pwsh -ExecutionPolicy Bypass -File ./scripts/sync-stats.ps1 || true
fi

echo "âœ… Post-commit hook finished!"
