{
  "name": "nouvo-ayiti-2075-blogs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
"scripts": {
  "lint": "next lint",
  "check-dicts": "node scripts/check-dicts.js",
  "check-dicts:strict": "node scripts/check-dicts.js --strict",
  "check-meta": "node scripts/check-meta.js",
  "check-required-only": "node scripts/check-required-only.js",
  "check-translation-sync": "node scripts/check-translation-sync.js",
  "patch-dicts": "node scripts/patch-dicts.js",
  "patch-missing": "node scripts/patch-missing.js",
  "patch-missing:dry": "node scripts/patch-missing.js --dry-run",
  "update-dicts:full": "powershell -ExecutionPolicy Bypass -File ./scripts/Update-Dictionaries-Full.ps1",
  "update-dicts:incremental": "powershell -ExecutionPolicy Bypass -File ./scripts/Update-Dictionaries-Incremental.ps1",
  "validate": "npm run check-meta && npm run check-dicts:strict && npm run check-translation-sync",
  "clean:locks": "rimraf .devserver-opened .no-auto-browser",
  "clean:all": "rimraf .next out build coverage .vercel .devserver-opened .no-auto-browser",
  "prebuild": "npm run clean:all",
  "build": "next build",
  "dev": "next dev",
  "test": "vitest",
  "test:coverage": "vitest run --coverage",
  "coverage:strict": "vitest run --coverage --passWithNoTests=false",
  "coverage:report": "vitest run --coverage || true",
  "coverage:view": "npm run test:coverage && npx open-cli coverage/index.html",
  "prepare": "husky install",
  "postdev": "npm run clean:locks",
  "ci-check": "npm run validate && npm run lint && npm run coverage:strict && npm run coverage:report"
},
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "next": "^14.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "framer-motion": "^12.23.19",
    "gray-matter": "^4.0.3",
    "zod": "^4.1.11"
  }
}
